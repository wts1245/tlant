
.srcoll_view {
	position: absolute;
	top: 0rpx;
	height: 100rpx;
	font-size: 30rpx;
	white-space: nowrap;
	line-height: 100rpx;
	color: #E54D42;
	-webkit-animation: myfirst 20s linear infinite;
	        animation: myfirst 20s linear infinite;
}
@-webkit-keyframes myfirst {
0% {
		margin-left: 750rpx;
}
100% {
		margin-left: -1500rpx;
}
}
@keyframes myfirst {
0% {
		margin-left: 750rpx;
}
100% {
		margin-left: -1500rpx;
}
}
.scroll_view_border {
	position: relative;
	width: 100%;
	background: #E54D42;
	height: 100rpx;
	overflow: hidden;
}

